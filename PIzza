using System.Diagnostics.Eventing.Reader;

namespace WinFormsApp4
{
    public partial class frmPizzaH : Form
    {
        public frmPizzaH()
        {
            InitializeComponent();
        }

        private void rbItalian_CheckedChanged(object sender, EventArgs e)
        {

        }

        private void label2_Click(object sender, EventArgs e)
        {

        }

        private void panel1_Paint(object sender, PaintEventArgs e)
        {

        }

        private void btnStart_Click(object sender, EventArgs e)
        {
            pnlOne.Enabled = true;
            pnl2.Enabled = true;
            pnl3.Enabled = true;
            pnl4.Enabled = true;
            btnEnd.Visible = true;
            btnCompute.Enabled = true;
            btnStart.Visible = false;

        }

        private void btnEnd_Click(object sender, EventArgs e)
        {
            pnlOne.Enabled = false;
            pnl2.Enabled = false;
            pnl3.Enabled = false;
            pnl4.Enabled = false;
            btnStart.Visible = true;

            btnEnd.Visible = false;
            txtAmount.Clear();
            txtChange.Clear();
            txtTotal.Clear();
            
        }

        private void btnCompute_Click(object sender, EventArgs e)
        {
            int total = 0;
            if (rbHawaiian.Checked)
            {
                if (rbSmall.Checked)
                {
                    total += 500;
                }
                else if (rbMedium.Checked)
                {
                    total += 650;
                }
                else if (rbLarge.Checked)
                {
                    total += 750;
                }
                
            }
            else if (rbItalian.Checked)
            {
                {
                    if (rbSmall.Checked)
                    {
                        total += 450;
                    }
                    else if (rbMedium.Checked)
                    {
                        total += 550;
                    }
                    else if (rbLarge.Checked)
                    {
                        total += 650;

                    }
                }
          


            }
            else if (rbOverload.Checked)
            {
                
                    if (rbSmall.Checked)
                    {
                        
                            total += 750;
                        
                    }
                    else if (rbMedium.Checked)
                    {
                        total += 850;
                    }
                    else if (rbLarge.Checked)
                    {
                        total += 950;
                    }
                
            }
            if (cbCheese.Checked) 
            {
                total += 50;
            }
            if (cbBacon.Checked)
            {
                total += 75;
            }
            if (cbBell.Checked)
            {
                total += 50;
            }
            if (cbPepperoni.Checked)
            {
                total += 50;
            }
            txtTotal.Text = total.ToString();

        }

        private void btnPay_Click(object sender, EventArgs e)
        {
            int payment = int.Parse(txtAmount.Text);
            int Total = int.Parse(txtTotal.Text);
            int change = payment - Total;
            if (payment >= Total) 
            {
                txtChange.Text = change.ToString(); 
            }
            else 
            {
                txtChange.Text = "Insufficient Amount Paid";
            }
           
        }
    }
}






